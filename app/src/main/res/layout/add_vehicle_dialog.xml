<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Enter VIN (Vehicle Identification Number)"
        android:textColor="@color/greyed_out"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="49dp"
        android:id="@+id/add_vehicle_dialog_enter_vin_label" />
    
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="e.g. 1HGBH41JXMN109186"
        android:textColorHint="@color/greyed_out"
        android:ellipsize="end"
        android:maxLines="1"
        android:inputType="textNoSuggestions|textCapCharacters"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/add_vehicle_dialog_enter_vin_label"
        android:id="@+id/add_vehicle_dialog_vin_edit_text" />
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This can be found in either the front of your dashboard, in the driver-side doorpost, or in the vehicle manual"
        android:textSize="12sp"
        android:textColor="@color/greyed_out"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/add_vehicle_dialog_vin_edit_text"
        android:id="@+id/add_vehicle_dialog_vin_find_label"/>
</android.support.constraint.ConstraintLayout>