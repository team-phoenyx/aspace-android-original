<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_root"
    tools:context=".MainActivity">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        mapbox:mapbox_cameraTargetLat="47.6553"
        mapbox:mapbox_cameraTargetLng="-122.3035"
        mapbox:mapbox_cameraTilt="20"
        mapbox:mapbox_cameraZoom="12"
        mapbox:mapbox_styleUrl="@string/mapbox_style_mapbox_streets">

        <android.support.v7.widget.Toolbar
            android:id="@+id/nav_toolbar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/nav_ic_maneuver"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginRight="8dp"
                android:background="@color/transparent"
                android:paddingLeft="-6dp"
                android:src="@drawable/ic_turn_right_24dp"
                android:tint="@android:color/white"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/nav_instructions_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/nav_maneuver_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="12dp"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <com.aspace.aspace.AutoResizeTextView
                    android:id="@+id/nav_maneuver_target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/nav_mute_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_volume_on_24dp"
                android:visibility="gone" />

        </android.support.v7.widget.Toolbar>

        <com.arlib.floatingsearchview.FloatingSearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="4dp"
            android:elevation="4dp"
            android:visibility="visible"
            app:floatingSearch_close_search_on_keyboard_dismiss="true"
            app:floatingSearch_leftActionMode="showSearch"
            app:floatingSearch_searchHint="Search..."
            app:floatingSearch_showSearchKey="true"
            app:floatingSearch_suggestionsListAnimDuration="250"
            mapbox:floatingSearch_menu="@menu/search_menu" />
        <ListView
            android:id="@+id/search_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/white"
            android:headerDividersEnabled="false"
            android:footerDividersEnabled="false"
            android:visibility="gone"
            android:elevation="4dp"
            android:scrollbars="vertical">
        </ListView>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/nav_subview"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="80dp"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/nav_info_duration_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="16dp"
                android:background="@color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5">

                <ImageView
                    android:id="@+id/nav_info_duration_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_alarm_24dp"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/nav_info_duration_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_info_distance_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/nav_info_duration_layout"
                app:layout_constraintRight_toLeftOf="@+id/nav_info_spots_layout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5">

                <ImageView
                    android:id="@+id/nav_info_distance_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_directions_24dp" />

                <TextView
                    android:id="@+id/nav_info_distance_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_info_spots_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="16dp"
                android:background="@color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5">

                <ImageView
                    android:id="@+id/nav_info_spots_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:scaleX="0.90"
                    android:scaleY="0.90"
                    android:src="@drawable/ic_parking_24dp" />

                <TextView
                    android:id="@+id/nav_info_spots_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="10+ spots"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <FrameLayout
            android:id="@+id/directions_fragment_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:elevation="4dp">
        </FrameLayout>

        <FrameLayout
            android:id="@+id/settings_fragment_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp">
        </FrameLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/navigate_route_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:visibility="gone"
            app:backgroundTint="@color/colorAccent"
            app:srcCompat="@drawable/ic_navigation_white_24dp"
            mapbox:elevation="4dp"
            tools:ignore="VectorDrawableCompat" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/cancel_navigation_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="90dp"
            android:layout_marginRight="16dp"
            android:visibility="gone"
            app:backgroundTint="@color/colorAccent"
            app:srcCompat="@drawable/ic_navigation_close"
            mapbox:elevation="4dp"
            tools:ignore="VectorDrawableCompat" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/snap_to_location_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:visibility="visible"
            app:backgroundTint="@color/colorAccent"
            app:srcCompat="@drawable/ic_my_location_24dp"
            mapbox:elevation="4dp"
            tools:ignore="VectorDrawableCompat" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/cancel_route_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="90dp"
            android:layout_marginRight="16dp"
            android:visibility="gone"
            app:backgroundTint="@color/colorAccent"
            app:srcCompat="@drawable/ic_cancel_24dp"
            mapbox:elevation="4dp"
            tools:ignore="VectorDrawableCompat" />

    </com.mapbox.mapboxsdk.maps.MapView>

</RelativeLayout>