<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <TextView
        android:id="@+id/add_vehicle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Add Vehicle"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Enter your car's manufacture year"
        android:textColor="@color/greyed_out"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/enter_year_label"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/add_vehicle_title" />

    <EditText
        android:id="@+id/enter_year_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="0dp"
        android:ellipsize="end"
        android:hint="e.g. 2009"
        android:inputType="textNoSuggestions"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColorHint="@color/greyed_out"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_year_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Enter your car's manufacture make"
        android:textColor="@color/greyed_out"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/enter_make_label"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/enter_year_edittext" />

    <EditText
        android:id="@+id/enter_make_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="0dp"
        android:ellipsize="end"
        android:hint="e.g. Toyota"
        android:inputType="textNoSuggestions"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColorHint="@color/greyed_out"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_make_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Enter your car's manufacture model"
        android:textColor="@color/greyed_out"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/enter_model_label"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/enter_make_edittext" />

    <EditText
        android:id="@+id/enter_model_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="0dp"
        android:ellipsize="end"
        android:hint="e.g. Corolla"
        android:inputType="textNoSuggestions"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColorHint="@color/greyed_out"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_model_label" />
</android.support.constraint.ConstraintLayout>