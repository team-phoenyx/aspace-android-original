<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:visibility="visible"
    mapbox:elevation="4dp"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/nav_ic_maneuver"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_turn_right_24dp"
        android:layout_marginLeft="8dp"
        mapbox:layout_constraintLeft_toLeftOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        mapbox:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:id="@+id/nav_instructions_layout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        mapbox:layout_constraintLeft_toRightOf="@+id/nav_ic_maneuver"
        android:layout_marginLeft="8dp"
        mapbox:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        mapbox:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/nav_maneuver_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In 800 ft"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nav_maneuver_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NE 4th Street"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/nav_mute_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/ic_volume_on_24dp"
        android:layout_marginRight="8dp"
        mapbox:layout_constraintRight_toRightOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        mapbox:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />
</android.support.constraint.ConstraintLayout>
