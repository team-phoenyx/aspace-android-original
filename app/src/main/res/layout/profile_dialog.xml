<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="8dp"
    android:paddingStart="8dp">

    <ImageView
        android:id="@+id/profile_picture_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="77dp"
        android:src="@drawable/profile_pic_border"
        android:elevation="4dp"
        android:tint="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        android:elevation="4dp"
        android:src="@drawable/default_profile_face"
        android:tint="@android:color/white"/>

    <TextView
        android:id="@+id/name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:duplicateParentState="false"
        android:ems="10"
        android:enabled="true"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_picture_border" />

    <TextView
        android:id="@+id/saved_locations_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="Saved Locations"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/name_textview"
        app:layout_constraintTop_toBottomOf="@+id/name_textview" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="4dp"
        android:background="#90909090"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/saved_locations_label"
        app:layout_constraintRight_toRightOf="@id/name_textview"
        app:layout_constraintTop_toBottomOf="@+id/saved_locations_label" />

    <ListView
        android:id="@+id/locations_listview"
        android:layout_width="0dp"
        android:layout_height="144dp"
        app:layout_constraintLeft_toLeftOf="@+id/name_textview"
        app:layout_constraintRight_toRightOf="@+id/name_textview"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        android:dividerHeight="0dp"
        android:divider="@null"/>

    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_settings_24dp" />

    <TextView
        android:id="@+id/no_locations_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="Go to Settings to save a couple locations :)"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/locations_listview"
        app:layout_constraintRight_toRightOf="@+id/locations_listview"
        app:layout_constraintTop_toTopOf="@+id/locations_listview" />

</android.support.constraint.ConstraintLayout>