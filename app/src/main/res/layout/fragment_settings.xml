<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:titleTextColor="@android:color/white"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/settings_toolbar_exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="16dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_cancel_24dp"
            android:tint="@android:color/white" />
    </android.support.v7.widget.Toolbar>
    
    <TextView
        android:id="@+id/settings_my_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Name"
        android:textColor="#90909090"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/settings_toolbar"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="40dp" />
    <View
        android:id="@+id/settings_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#90909090"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/settings_my_name_label"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />

    <EditText
        android:id="@+id/settings_name_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="18dp"
        android:background="@color/transparent"
        android:text="Zula Li"
        android:textSize="15sp"
        android:inputType="none"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_divider" />

    <ImageButton
        android:id="@+id/settings_name_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>